{
  "extends": "@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true, //to avoid problems with upper and lower case file na,es
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
